@using System.Activities.Expressions
@model VidlyV3.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Birthday)

        @Html.TextBoxFor(m => m.Customer.Birthday,"{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
   
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.MembershipTypeId)

        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes,"Id","Name","Select Membership Type"),
            new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m=>m.Customer.IsSubscribedToNewsletter) Subscribed to Newsletter
        </label>
    </div>

    @Html.HiddenFor(m=> m.Customer.Id)
    <button type="submit" class="btn btn-primary">Save</button>

}

