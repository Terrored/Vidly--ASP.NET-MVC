@using VidlyV3.Models
@model VidlyV3.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<td>@Html.ActionLink("NEW MOVIE", "New", "Movies", new { id= Model.Movie.Id }, null)</td>
<table class="table table-bordered table-hover">
    
    <thead>
    <tr>
        <th>Movie</th>
        <th>Genre</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var movie in Model.Movies)
    {

        <tr>
            
            <td>@Html.ActionLink(movie.Name,"Details","Movies",new{id=movie.Id},null)</td>
            <td>@movie.Genre.Name</td>
        </tr>
    }
    </tbody>
    

</table>

